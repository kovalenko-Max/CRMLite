{
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Debug"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "%ALLUSERSPROFILE%\\WebApp\\Logs\\TransactionStoreLog.txt",
