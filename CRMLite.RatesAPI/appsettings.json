{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%ALLUSERSPROFILE%\\WebApp\\Logs\\RatesAPI.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{SourceContext}] [{Level:u3}] [{CorrelationId}] {Message:j}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 100000000
        }
      }
    ],
    "Enrich": [ "WithCorrelationId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=crmlitedb.database.windows.net;User ID=Maks;Initial Catalog=CRMLite.RatesDB;Password=Qwerty12#;Connect Timeout=60;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False"
  }
}
